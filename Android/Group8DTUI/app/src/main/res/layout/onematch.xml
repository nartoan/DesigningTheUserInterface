<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BF360C"
        android:id="@+id/toolbarOneMatch"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Trận sắp diễn ra" />

    <ScrollView
        android:id="@+id/activity_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cloudteddy.newsreader.MainActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="50dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arsenalbig"
                        android:id="@+id/imageView3" />

                    <TextView
                        android:text="Arsenal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:weightSum="1">

                    <TextView
                        android:text="3:00\n28/11/2016"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        android:gravity="center"
                        android:capitalize="sentences"
                        android:layout_gravity="center_horizontal" />

                    <ImageView
                        android:src="@drawable/alarm"
                        android:id="@+id/imageView5"
                        android:layout_height="36dp"
                        android:layout_width="61dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chelseabig"
                        android:id="@+id/imageView4"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Chelsea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Đánh giá trước trận đấu : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:capitalize="sentences"
                    android:paddingBottom="5dp" />

                <TextView
                    android:text="         Cả hai đội đều là đội mạnh. Các cầu thủ của hai đội đang vào thời điểm đỉnh cao.Trận đấu hứa hẹn sẽ mang đến cho người hâm mộ một trận cầu đỉnh cao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView13"
                    android:layout_weight="1"
                    android:paddingLeft="10dp" />

                <TextView
                    android:text="Tường thuật trực tiếp : "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="5dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="4'   :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView20" />

                        <TextView
                            android:text="Tiền vệ Cazorla dứt điểm từ cự ly khoảng 25m khiến thủ môn Courtois phải tung người đẩy bóng cứu thua cho Chelsea."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:layout_weight="1"
                            android:padding="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="10' :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView21" />

                        <TextView
                            android:text="VÀOOO! 1-0, Sanchez mở tỷ số cho Arsenal sau tình huống hậu đậu của trung vệ Cahill bên phía đội khách. "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView22"
                            android:layout_weight="1"
                            android:padding="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="13' :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView23" />

                        <TextView
                            android:text="VÀOOO! 2-0, Walcott đệm bóng nhân đôi cách biệt cho Arsenal sau khi đón đường căng quang từ biên của hậu vệ cánh phải Bellerin."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView24"
                            android:layout_weight="1"
                            android:padding="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="20' :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView25" />

                        <TextView
                            android:text="Willian dứt điểm bóng đi chìm hiểm sát sạt cột dọc khung thành Arsenal, CĐV chủ nhà được phen hú vía."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView26"
                            android:layout_weight="1"
                            android:padding="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="40' :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView27" />

                        <TextView
                            android:text="VÀOOO! Ozil nới rộng tỷ số lên 3-0 cho Arsenal. Tiền vệ nhỏ con volley đập đất khiến thủ thành Courtois không kịp trở tay."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView28"
                            android:layout_weight="1"
                            android:padding="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="83' :"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView29" />

                        <TextView
                            android:text="Costa D bị trọng tài thổi phạt và nhận thẻ vàng."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView30"
                            android:layout_weight="1"
                            android:padding="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:text="Chung cuộc : Kết quả Arsenal vs Chelsea (FT: 3-0)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:layout_weight="1"
                    android:padding="30dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>